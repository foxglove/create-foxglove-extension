{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "newLine": "lf",
    "sourceMap": true,
    "inlineSources": true,

    "allowJs": true,
    "composite": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "strict": true
  }
}
